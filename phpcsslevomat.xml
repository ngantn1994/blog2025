<?xml version="1.0"?>
<ruleset name="Project PHPCS with Slevomat">
    <description>Project coding standard using Slevomat. Keep minimal to enable CI.</description>

    <!-- Base standard from Slevomat -->
    <rule ref="SlevomatCodingStandard">
        <!-- You can gradually enable more rules. For now, keep defaults. -->
    </rule>

    <!-- Paths to scan -->
    <file>app</file>
    <file>config</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Exclusions to reduce noise initially -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <!-- Set some common properties -->
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>

    <!-- Example of specific tweaks (non-fatal) -->
    <config name="php_version" value="80400"/>
</ruleset>
